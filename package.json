{
  "name": "openjourneyplanner-ui",
  "version": "0.0.1",
  "description": "Open Journey Planner UI",
  "author": "crew@reittiopas.fi",
  "scripts": {
    "folder": "mkdir -p _static/js; mkdir -p _static/css; mkdir -p _static/font;",
    "prestatic": "npm run folder",
    "static": "cp -r static/* _static; cp -r font/* _static/font/",
    "precss:build": "npm run folder",
    "css:build": "node-sass sass/main.scss --stdout > _static/css/bundle.css",
    "css:watch": "watch --wait=1 'npm run css:build' sass/",
    "prebrowserify:build": "npm run folder",
    "browserify:build": "browserify -t coffee-reactify --extension='.cjsx' --extension='.coffee' js/main.coffee > _static/js/bundle.js",
    "browserify:watch": "watch --wait=1 'npm run browserify:build' js",
    "livereload": "live-reload --port 9000 _static view",
    "watch": "npm run static; parallelshell 'npm run css:watch' 'npm run browserify:watch' 'node server/server.js' 'npm run livereload'"
  },
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": ""
  },
  "bugs": {
    "url": ""
  },
  "dependencies": {
    "body-parser": "^1.12.2",
    "cookie-parser": "^1.3.4",
    "express": "^4.12.3",
    "fastclick": "^1.0.6",
    "flux": "^2.0.1",
    "hogan-express": "^0.5.2",
    "jquery": "^2.1.3",
    "purecss": "^0.6.0",
    "react": "^0.13.1",
    "slideout": "^0.1.5",
    "zurb-foundation-5": "^5.4.7"
  },
  "devDependencies": {
    "browserify": "^9.0.3",
    "coffee-reactify": "^3.0.0",
    "coffeeify": "^1.0.0",
    "node-sass": "^2.0.1",
    "reactify": "^1.1.0",
    "watch": "^0.14.0"
  }
}
