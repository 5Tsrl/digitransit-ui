{
  "name": "openjourneyplanner-ui",
  "version": "0.0.1",
  "description": "Open Journey Planner UI",
  "author": "crew@reittiopas.fi",
  "scripts": {
    "folder": "mkdir -p _static/js; mkdir -p _static/css; mkdir -p _static/font;",
    "prestatic": "npm run folder",
    "static": "cp -r static/* _static; cp -r font/* _static/font/",
    "precss:build": "npm run folder",
    "css:build": "node-sass sass/main.scss --stdout > _static/css/bundle.css",
    "css:watch": "watch --wait=1 'npm run css:build' app/component",
    "prebrowserify:build": "npm run folder",
    "browserify:build": "browserify -t coffee-reactify --extension='.cjsx' --extension='.coffee' --debug app/app.cjsx > _static/js/bundle.js; echo 'Bundle built.'",
    "browserify:watch": "watch --wait=1 'npm run browserify:build' app",
    "livereload": "live-reload --port 9000 _static",
    "watch": "npm run static; parallelshell 'npm run css:watch' 'npm run browserify:watch' 'node server/server.js' 'npm run livereload'",
    "discify": "browserify --full-paths -t coffee-reactify --extension='.cjsx' --extension='.coffee' app/app.cjsx > _static/js/bundle.js; discify _static/js/bundle.js > filesizes.html; echo 'See filesizes.html' with browser",
    "dist:js": "npm run browserify:build; minify _static/js/bundle.js;",
    "dist:css": "npm run css:build; cleancss _static/css/bundle.css -o _static/css/bundle.min.css",
    "dist": "npm run dist:js; npm run dist:css"
  },
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": ""
  },
  "bugs": {
    "url": ""
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browser": {
    "typeaheadjs-shim": "./node_modules/typeahead.js/dist/typeahead.bundle.js",
    "bloodhound-shim": "./node_modules/typeahead.js/dist/bloodhound.js"
  },
  "browserify-shim": {
    "typeaheadjs-shim": {
      "exports": "Typeahead",
      "depends": [
        "jquery:jQuery"
      ]
    },
    "bloodhound-shim": {
      "exports": "Bloodhound",
      "depends": [
        "jquery:jQuery"
      ]
    }
  },
  "dependencies": {
    "body-parser": "^1.12.2",
    "cookie-parser": "^1.3.4",
    "express": "^4.12.3",
    "fastclick": "^1.0.6",
    "flux": "^2.0.1",
    "hogan-express": "^0.5.2",
    "jquery": "^2.1.3",
    "moment": "^2.10.2",
    "react": "^0.13.1",
    "react-leaflet": "^0.4.1",
    "react-router": "^0.13.2",
    "react-simpletabs": "^0.6.1",
    "slideout": "^0.1.5",
    "typeahead.js": "*",
    "zurb-foundation-5": "^5.4.7"
  },
  "devDependencies": {
    "browserify": "^9.0.3",
    "browserify-shim": "^3.8.3",
    "coffee-reactify": "^3.0.0",
    "coffeeify": "^1.0.0",
    "node-sass": "3.0.0-beta.4",
    "reactify": "^1.1.0",
    "watch": "^0.14.0"
  }
}
