{
  "src_folders": ["tests"],
  "output_folder" : "reports",

  "selenium": {
    "start_process": false,
    "log_path": "",
    "host": "selenium-hub:4443",
    "port": 4444,
    "cli_args": {
      "webdriver.chrome.driver": "",
      "webdriver.ie.driver": ""
    }
  },

  "test_settings": {
    "default": {
      "launch_url": "http://test.rutebanken.org",
      "selenium_port": 4443,
      "selenium_host": "localhost",
      "silent": false,
      "screenshots": {
        "enabled": false,
        "on_failure": true,
        "on_error": true,
        "path": "reports/screenshots/"
      },
      "desiredCapabilities": {
        "browserName": "firefox",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    }
  }
}
