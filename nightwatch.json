{
  "src_folders": ["tests"],
  "output_folder" : "reports",

  "test_settings": {
    "default": {
      "launch_url": "http://test.rutebanken.org",
      "selenium_port": 4443,
      "selenium_host": "selenium-hub:4443",
      "silent": false,
      "screenshots": {
        "enabled": false,
        "on_failure": true,
        "on_error": true,
        "path": "reports/screenshots/"
      },
      "desiredCapabilities": {
        "browserName": "firefox",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    }
  }
}
